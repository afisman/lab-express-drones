<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Create a new drone</h2>
            <hr>
            <form action="/drones/create" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Helices</label>
                    <input type="number" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Velocidad Maxima</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <button type="submit" class="btn btn-dark">Crear drone</button>

            </form>

        </div>
    </div>
</div>